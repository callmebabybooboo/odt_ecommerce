<div class="max-w-4xl mx-auto p-6 bg-white rounded shadow">
  <h1 class="text-2xl font-bold mb-4">คำสั่งซื้อของฉัน</h1>

  <% if @orders.any? %>
    <table class="w-full text-left">
      <thead>
        <tr class="border-b">
          <th class="py-2">เลขที่</th>
          <th class="py-2">วันที่</th>
          <th class="py-2">สถานะ</th>
          <th class="py-2">ยอดรวม</th>
          <th class="py-2"></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr class="border-b">
            <td class="py-2">#<%= order.id %></td>
            <td class="py-2"><%= l(order.created_at, format: :short) %></td>
            <td class="py-2"><%= order.status_text %></td>
            <td class="py-2"><%= number_to_currency(order.total_price, unit: "฿") %></td>
            <td class="py-2">
              <%= link_to "ดูรายละเอียด", order_path(order), class: "text-blue-600 hover:underline text-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-600">ยังไม่มีคำสั่งซื้อ</p>
  <% end %>
</div>
